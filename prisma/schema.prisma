generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model about {
  id        Int      @id @default(autoincrement())
  content   String
  pfp       String
  age       Int?
  banner    String
  status    String
  verified  Boolean
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], map: "About_userId_fkey")

  @@index([userId], map: "About_userId_fkey")
}

