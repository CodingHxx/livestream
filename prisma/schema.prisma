model Stream {
  id        Int      @id @default(autoincrement())
  title     String
  thumbnail String
  Link      String  // Ensure this matches the field name used in your code
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User User[]
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique(map: "User_email_key")
  password  String
  createdAt DateTime @default(now())
  about     about[]
  streams   Stream[] // Represents a one-to-many relationship with Stream
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  postLink  String?
  postImage String? 
  createdAt DateTime @default(now())
}
